<style>
.textArea {
  color: black;
  border-radius: 5px;
  width: 300px;
  height: 300px;
}
.titleArea {
  color: black;
  border-radius: 5px;
}
.button {
    font-family: "Times New Roman", Times, serif;
    color: black;
    background-color: #f44336; 
    border: none;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    margin: 4px 2px;
    cursor: pointer;
    border-radius: 12px;
    font-size: 25px;
}
a:visited {
    text-decoration: none;
    color: black;
}
a:link {
    text-decoration: none;
    color: black;
}
.button:hover {
    border-radius: 12px;
    background-color: darkred;
}
</style>
<div class="logo">
    <img src="https://webpages.uncc.edu/ddas4/SoftwareEngFinalProject/output-onlinepngtools.png" align="left" width="400px" height="210px"/><h1 style="font-size:64pt;">RANK MY RIDE: NEW SUBMISSION</h1>
</div>
<%= form_for :submission, url: submissions_path, html: { multipart: true } do |f| %>
 
  <% if @submission.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@submission.errors.count, "error") %> prohibited
        this submission from being saved:
      </h2>
      <ul>
        <% @submission.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
 <p>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </p>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "titleArea" %>
  </p>
 
  <p>
    <%= f.label :text, "Description" %><br>
    <%= f.text_area :text, class: "textArea" %>
  </p>
  
  <p>
    <%= f.submit class: 'button'%>
  </p>
  
<% end %>
 
<button type="button" class="button"><%= link_to 'Back', controller: 'submissions' %></button>